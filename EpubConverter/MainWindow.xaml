<Window x:Class="EpubConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EpubConverter"
       mc:Ignorable="d"
        Title="Epub Converter" Height="400" Width="800">
    <Grid>
        <Label Name="pdflabel" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Margin="50,150,0,0" Width="auto">PDF File Path:</Label>
        <TextBox Name="pdftextbox" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="310" Margin="150,150,0,0"></TextBox>
        <Button Name="browsebutton" Content="Browse" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="150,200,0,0" Height="30" Width="100" Click="browsebutton_Click"></Button>
        <Button Name="convertbutton" Content="Convert" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="255,200,0,0" Height="30" Width="100"></Button>
        <TextBlock Name="statustextblock" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="360,200,0,0" Height="30" Width="100" TextAlignment="Center"></TextBlock>
    </Grid>
</Window>
